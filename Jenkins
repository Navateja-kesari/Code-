pipeline {
  agent none
  stages {
    stage('Docker Build') {
      agent any
      steps {
        sh 'docker build -t abhidevan/kube .'
      }
    }
    stage('Docker Push') {
      agent any
      steps {
        withCredentials([usernamePassword(credentialsId: 'dockerhub', passwordVariable: 'dockerHubPassword', usernameVariable: 'dockerHubUser')]) {
          sh "docker login -u ${env.dockerHubUser} -p ${env.dockerHubPassword}"
          sh 'docker push abhidevan/kube'
	}
      }
    }
    stage('Deploy New Build To Kubernetes') {
	    agent any
	    steps{
		    sh 'docker pull abhidevan/kube'
		    sh 'kubectl create deployment builds --image abhidevan/kube'
		    sh 'kubectl set image deployment/kube kube=abhidevan/kube'
		    sh 'kubectl create service nodeport builds --tcp=80:80'
	    }
      }
  }
}
